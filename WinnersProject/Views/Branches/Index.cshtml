@model IEnumerable<WinnersProject.Models.Branch>

@{
    ViewBag.Title = "Branches";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="box">
            <div class="box-header with-border">
                <a class="btn btn-info" href="@Url.Action("Create","Branches")"><i class="fa fa-plus"></i>Add Branches</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="table-responsive">
                    <table id="example" class="table table-bordered table-hover display nowrap margin-top-10 w-p100">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>District</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var branch in Model)
                            {
                            <tr>
                                <td>@branch.branchName</td>
                                <td>@branch.District.name</td>

                                <td>

                                    @*<a class="btn btn-outline-success" href="@Url.Action("Edit","Branches",new { id = district.Id,districtName= district.name})"><i class="fa fa-users"></i> VIEW MEMBERS</a>*@
                                    <a class="btn btn-outline-primary" href="@Url.Action("Edit","Branches",new{id = branch.Id })"><i class="fa fa-edit"></i> EDIT</a>
                                </td>

                                <td>

                                    @*<a class="btn btn-outline-success" href="@Url.Action("Edit","Branches",new { id = district.Id,districtName= district.name})"><i class="fa fa-users"></i> VIEW MEMBERS</a>*@
                                    <a class="btn btn-outline-danger" href="@Url.Action("Delete","Branches",new{id = branch.Id })"><i class="fa fa-trash"></i> DELETE</a>
                                </td>
                            </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>