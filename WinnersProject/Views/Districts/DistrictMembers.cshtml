
@using WinnersProject.Models
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var members = (List<Member>)ViewBag.members;
    int id = (int)ViewBag.id;
    string districtName = (string)ViewBag.districtName;
    string date = (string)ViewBag.date;
    ViewBag.Title = "District Members " + districtName;
}


<div class="row">

    <div class="col-12">
        <div class="box">
            <div class="box-header with-border">
                <h4 class="box-title">Search Members</h4>
            </div>

            <!-- /.box-header -->
            <div class="box-body">
                <form class="form-group" method="get">
                    <input name="id" hidden ="hidden" value="@id" />
                    <input name="districtName" hidden="hidden" value="@districtName" />
    
                    <div class="row">

                        <div class="col-md-4 col-12">
                            <div class="form-group">
                                <label>Date</label>
                                <input name="date" class="form-control" type="date" />
                            </div>
                            <!-- /.form-group -->
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary pull-right">SEARCH</button>
                            </div>
                            <!-- /.form-group -->
                        </div>

                    </div>
                </form>
                <div class="table-responsive">
                    <table id="example" class="table table-bordered table-hover display nowrap margin-top-10 w-p100">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone Number</th>
                                <th>Sex</th>
                                <th>Occupation</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in members)
                            {
                                <tr>
                                    <td>@member.name</td>
                                    <td>@member.phoneNo</td>
                                    <td>@member.sex</td>
                                    <td>@member.occupation</td>
                                    <td>

                                        <a class="btn btn-outline-success" href="@Url.Action("Details","Members",new { id = member.Id })"><i class="fa fa-eye"></i> VIEW MEMBER DETAILS</a>

                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>